<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <!--<com.esri.android.map.MapView-->
        <!--android:id="@+id/mapview1_shade"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
    <!--<com.esri.android.map.MapView-->
        <!--android:id="@+id/mapview2_shade"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->



    <com.gangbeng.tiandituhb.widget.MyDiscreteSeekBar
        android:id="@+id/seekbar_shade"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:maxHeight="4dp"
        android:minHeight="4dp"
        android:thumb="@mipmap/icon_button"
        android:thumbOffset="0dp" />

    <com.gangbeng.tiandituhb.widget.MapScaleView
        android:id="@+id/mapviewscale_shade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" />

    <com.gangbeng.tiandituhb.widget.MapZoomView
        android:id="@+id/mapzoom_shade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mapviewscale_shade"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/seekbar_shade" />
    <android.support.v7.widget.CardView
        android:id="@+id/change_calulate"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/seekbar_shade">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_change_map" />
    </android.support.v7.widget.CardView>

</RelativeLayout>