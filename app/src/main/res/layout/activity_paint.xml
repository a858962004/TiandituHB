        android:layout_height="match_parent" />

    <com.gangbeng.tiandituhb.widget.MyToolbar
        android:id="@+id/toolbar_paint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/mainRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/save_paint"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_searchview"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@mipmap/icon_baocun" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quit_paint"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_searchview"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@mipmap/icon_tuichu" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/change_map"
        style="@style/style_cardview_map"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_change_map" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/location_map"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_location" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:visibility="gone">

        <com.gangbeng.tiandituhb.workbox.PenStrockAndColorSelect
