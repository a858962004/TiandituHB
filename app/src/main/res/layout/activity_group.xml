<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/bottom_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="我的组队"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tv_set"
            android:layout_alignParentRight="true"
            android:text="设置 >"
            android:textSize="17sp"
            android:textColor="@color/darkcyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/tv_set"
            android:id="@+id/recycler_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_above="@+id/bottom_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.esri.android.map.MapView
            android:id="@+id/map_group"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/change_group"
        style="@style/style_cardview_map"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_change_map" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_commend"
        android:background="@drawable/background_kouling"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.gangbeng.tiandituhb.widget.MapScaleView
        android:id="@+id/mapviewscale_group"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/location_group"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/mapviewscale_group"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_location" />
    </android.support.v7.widget.CardView>

    <com.gangbeng.tiandituhb.widget.MapZoomView
        android:id="@+id/mapzoom_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/mapviewscale_group"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp" />

    </RelativeLayout>
</RelativeLayout>