<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout style="@style/style_register_linear">
        <EditText
            android:id="@+id/ed_loginname"
            android:hint="请输入登录名"
            style="@style/style_register_ed2" />
        <TextView
            style="@style/horizonline"/>
        <EditText
            android:id="@+id/ed_password"
            android:inputType="textPassword"
            android:hint="请输入密码"
            style="@style/style_register_ed2" />
        <TextView
            style="@style/horizonline"/>
        <EditText
            android:id="@+id/ed_password2"
            android:inputType="textPassword"
            android:hint="请再次输入密码"
            style="@style/style_register_ed2" />
        <TextView
            style="@style/horizonline"/>
        <EditText
            android:id="@+id/ed_usename"
            android:hint="请输入姓名"
            style="@style/style_register_ed2" />
        <TextView
            style="@style/horizonline"/>
        <EditText
            android:id="@+id/ed_telephone"
            android:inputType="phone"
            android:hint="请输入手机号"
            style="@style/style_register_ed2" />
        <TextView
            style="@style/horizonline"/>
        <EditText
            android:id="@+id/ed_email"
            android:inputType="textEmailAddress"
            android:hint="请输入电子邮箱"
            style="@style/style_register_ed2" />
