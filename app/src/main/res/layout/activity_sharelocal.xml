<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.esri.android.map.MapView
        android:id="@+id/map_sharelocal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <include layout="@layout/view_searchlocal" />
    <android.support.v7.widget.CardView
        android:id="@+id/change_sharelocal"
        style="@style/style_cardview_map"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_change_map" />
    </android.support.v7.widget.CardView>


    <com.gangbeng.tiandituhb.widget.MapScaleView
        android:id="@+id/mapviewscale_sharelocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/location_sharelocal"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/mapviewscale_sharelocal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_location" />
    </android.support.v7.widget.CardView>

    <com.gangbeng.tiandituhb.widget.MapZoomView
        android:id="@+id/mapzoom_sharelocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/mapviewscale_sharelocal"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp" />
    <RelativeLayout
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/rl_bottom_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@null">

        <include layout="@layout/view_bottom_local" />
    </RelativeLayout>
</RelativeLayout>