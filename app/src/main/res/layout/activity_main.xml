<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gangbeng.tiandituhb.activity.MainActivity">

    <com.esri.android.map.MapView
        android:id="@+id/bmapsView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/tablayoutheight" />

    <include layout="@layout/view_tab_map" />

    <include layout="@layout/view_searchview" />

    <android.support.v7.widget.CardView
        android:id="@+id/change_map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/icon_change_map" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
