<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gangbeng.tiandituhb.activity.MainActivity">

    <com.esri.android.map.MapView
        android:id="@+id/bmapsView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <include layout="@layout/view_tab_map" />

    <include layout="@layout/view_searchview" />

    <android.support.v7.widget.CardView
        android:id="@+id/change_map"
        style="@style/style_cardview_map"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_change_map" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/location_map"
        style="@style/style_cardview_map"
        android:layout_below="@+id/change_map"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_location" />
    </android.support.v7.widget.CardView>


</RelativeLayout>
