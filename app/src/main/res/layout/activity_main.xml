<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gangbeng.tiandituhb.activity.MainActivity">

    <com.esri.android.map.MapView
        android:id="@+id/bmapsView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true" />

    <include
        android:id="@+id/id_tab_map"
        layout="@layout/view_tab_map" />

    <include layout="@layout/view_searchlocal" />
    <android.support.v7.widget.CardView
        android:id="@+id/change_map"
        style="@style/style_cardview_map"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_change_map" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/location_tuceng"
        style="@style/style_cardview_map"
        android:layout_below="@+id/change_map"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_tuceng" />
    </android.support.v7.widget.CardView>

    <com.github.library.bubbleview.BubbleLinearLayout
        android:id="@+id/bubbletuceng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_map"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/location_tuceng"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        app:angle="3dp"
        app:arrowCenter="true"
        app:arrowHeight="10dp"
        app:arrowLocation="right"
        app:arrowWidth="8dp"
        app:bubbleColor="#ffffff">

        <CheckBox
            android:id="@+id/cb_lyxz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="土地利用现状" />

        <CheckBox
            android:id="@+id/cb_xcbj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="乡村边界" />
    </com.github.library.bubbleview.BubbleLinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/location_tianqi"
        style="@style/style_cardview_map"
        android:layout_below="@+id/location_tuceng"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_weather" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/location_quanjing"
        style="@style/style_cardview_map"
        android:layout_below="@+id/location_tianqi"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_quanjing" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/location_gongxiang"
        style="@style/style_cardview_map"
        android:layout_below="@+id/location_quanjing"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_sharelocal" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_quanjing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/icon_quandingwei"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_quanjing2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/icon_quandingwei"
            android:visibility="gone" />

    </LinearLayout>

    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/bubbletextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_center"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="正在查询..."
        android:visibility="gone"
        app:angle="3dp"
        app:arrowCenter="true"
        app:arrowHeight="10dp"
        app:arrowLocation="bottom"
        app:arrowWidth="8dp"
        app:bubbleColor="#7EC0EE" />


    <android.support.v7.widget.CardView
        android:id="@+id/bt_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/toolbar"
        android:visibility="gone"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </android.support.v7.widget.CardView>

    <com.gangbeng.tiandituhb.widget.MapScaleView
        android:id="@+id/mapviewscale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_tab_map"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/location_map"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/mapviewscale"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_location" />
    </android.support.v7.widget.CardView>

    <com.gangbeng.tiandituhb.widget.MapZoomView
        android:id="@+id/mapzoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mapviewscale"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp">

    </com.gangbeng.tiandituhb.widget.MapZoomView>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@null">

        <include layout="@layout/item_seardhresult" />
    </RelativeLayout>
    <RelativeLayout
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/rl_weather_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@null">
        <include layout="@layout/view_bottom_weather"/>

    </RelativeLayout>
    <RelativeLayout
        android:clickable="true"
        android:visibility="gone"
        android:id="@+id/rl_bottom_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@null">

        <include layout="@layout/view_bottom_local" />
    </RelativeLayout>


</RelativeLayout>
