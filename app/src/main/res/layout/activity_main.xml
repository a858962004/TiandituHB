<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gangbeng.tiandituhb.activity.MainActivity">
    <com.esri.android.map.MapView
        android:id="@+id/bmapsView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true" />

    <include layout="@layout/view_tab_map" />

    <include layout="@layout/view_searchview" />

    <android.support.v7.widget.CardView
        android:id="@+id/change_map"
        style="@style/style_cardview_map"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_change_map" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/location_map"
        style="@style/style_cardview_map"
        android:layout_below="@+id/change_map"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_location" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/location_quanjing"
        style="@style/style_cardview_map"
        android:layout_below="@+id/location_map"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <TextView
            style="@style/style_cardtv_map"
            android:background="@mipmap/icon_quanjing" />
    </android.support.v7.widget.CardView>



    <ImageView
        android:id="@+id/img_quanjing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/icon_dingwei02"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/bt_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>
